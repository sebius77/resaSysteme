{# On utilise le layout général, qui se situe dans ce même AppBundle #}
{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}



{% block title %}
    Billetterie - {{ parent() }}
{% endblock %}

{% block body %}


    <div class="row">
        <div id="billetterie" class="col-md-12">
            <h3 class="text-center">Billeterie</h3>
        </div>
    </div>


    <div class="container"></div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Affichage des étapes de la commande</h1>
        </div>
    </div>
    <div class="row">
    {% for message in app.flashes('notice') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}
    </div>

    <div class="row">

        <div class="col-md-8">
            <img id="panel-img-1" src="{{ asset('images/louvre2.jpg') }}" class="img-responsive">
        </div>
        <div class="col-md-4">
           <div id="datePicker"></div>
        </div>
        <div class="col-md-4">

            {{ form_start(form) }}
            {{ form_row(form.dateReservation) }}
            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}
{# On utilise le layout général, qui se situe dans ce même AppBundle #}
{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}



{% block title %}
    Choix des billets - {{ parent() }}
{% endblock %}

{% block body %}

    {{ include("AppBundle:ticket:bandeau.html.twig") }}

    <div class="row">
        <div class="col-md-3">
            <h3><span class="label label-primary">Etape 1 : Sélection Date</span></h3>
        </div>
        <div class="col-md-3">
            <h3><span class="label label-default">Etape 2 : Choix Billets</span></h3>
        </div>
        <div class="col-md-3">
            <h3><span class="label label-default">Etape 3 : Confirmation</span></h3>
        </div>
        <div class="col-md-3">
            <h3><span class="label label-default">Etape 4 : Paiement</span></h3>
        </div>
    </div>
    <br/>

    <div class="container"></div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Affichage des étapes de la commande</h1>
        </div>
    </div>
    <div class="row">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    Nombre billet commandé {{ nbreBillet }}

    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            {{ form(formBillet) }}
        </div>

    </div>





    <div class="row" id="formBillets" nbre="{{ nbreBillet }}">


    </div>

{% endblock %}